{
  "name": "retext-preset-stoicism",
  "version": "0.0.1",
  "description": "Text processor for the Stoicism Compendium",
  "license": "BlueOak-1.0.0",
  "keywords": [
    "retext",
    "preset",
    "stoicism"
  ],
  "repository": "stoicism-compendium/retext-preset-stoicism",
  "bugs": "https://github.com/stoicism-compendium/retext-preset-stoicism/issues",
  "author": "Sean Leather (https://github.com/spl)",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "dictionary-en": "^3.0.0",
    "retext-contractions": "^4.0.0",
    "retext-diacritics": "^3.0.0",
    "retext-indefinite-article": "^2.0.1",
    "retext-quotes": "^4.0.0",
    "retext-redundant-acronyms": "^3.0.0",
    "retext-repeated-words": "^3.0.0",
    "retext-sentence-spacing": "^4.0.0",
    "retext-spell": "^4.0.0"
  },
  "devDependencies": {
    "depcheck": "^0.9.2",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "remark-cli": "^8.0.0"
  },
  "scripts": {
    "depcheck": "depcheck",
    "remark:test": "remark --quiet --frail .",
    "remark:format": "remark --output --quiet --frail .",
    "eslint:test": "eslint '**/*.js'",
    "eslint:format": "eslint --fix '**/*.js'",
    "format": "npm run eslint:format && npm run remark:format && npm run eslint:format",
    "test": "npm run depcheck && npm run eslint:test && npm run remark:test && npm run eslint:test"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "remarkConfig": {
    "settings": {
      "bullet": "*",
      "emphasis": "_",
      "listItemIndent": "1",
      "rule": "-",
      "strong": "*",
      "tightDefinitions": true
    }
  }
}
